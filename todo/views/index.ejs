<html>
	<head>
		<title>Todo</title>
		<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
		<script src="/js/angularApp.js"></script>
  	</head>
  	<body ng-app="todo">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<ui-view></ui-view>
		  	</div>
	  	</div>
	  <script type="text/ng-template" id="/home.html">
	  <table class="table">	  		
		  	<tr>
			  	<th>Title</th>
			  	<th>Description</th>			  				  	
			  	<th>Creator</th>
			<tr ng-repeat="task in tasks">
				<td>{{task.title}}</td>
				<td>{{task.description}}</td>
				<td>{{task.creator.name}}</td>
			</tr>			
		</table>
		<form ng-submit="addTask()">
			<h4>Add a new task</h4>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
			</div>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Description" ng-model="description"></input>
			</div>
			<div class="form-group">
				<select ng-model="creator">
					<option value="" disabled selected>Please select a user</option>
					<option ng-repeat="user in users" value={{user._id}}>{{user.name}}</option>
				</select>
			</div>
			<button class="btn btn-primary" type="submit">Submit</button>
		</form>
		
	  	<table class="table">	  		
		  	<tr>
			  	<th>Name</th>
			  	<th>Email</th>
			<tr ng-repeat="user in users">
				<td>{{user.name}}</td>
				<td>{{user.email}}</td>
			</tr>			
		</table>
		<form ng-submit="addUser()">
			<h4>Add a new user</h4>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Name" ng-model="name"></input>
			</div>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Email" ng-model="email"></input>
			</div>
			<button class="btn btn-primary" type="submit">Submit</button>
		</form>
  	</script>
  	</body>
</html>